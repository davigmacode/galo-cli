{
  "engine": {
    "name": "GALO",
    "description": "Generative Artworks Lies On-chain",
    "version": 1.0
  },
  "traits": {
    "path": "/traits",
    "summary": "traits.json",
    "rarity": "rarity.csv",
    "delimiter": "__",
    "exts": [".png", ".jpg"]
  },
  "metadata": {
    "path": "/metadata",
    "summary": "metadata.json",
    "template": "template.json"
  },
  "artworks": {
    "path": "/artworks",
    "ext": ".png",
    "width": 1080,
    "height": 1080
  },
  "collage": {
    "name": "preview.jpg",
    "order": "random",
    "limit": 0.5,
    "thumbPerRow": -1,
    "thumbWidth": 50
  },
  "generation": {
    "summary": "generation.json",
    "duplicateTolerance": 10000,
    "shuffle": false,
    "startAt": 0,
    "threads": []
  },
  "distribution": {
    "path": "/dist",
    "order": "random",
    "outputs": [
      { "path": "/public", "default": true },
      { "path": "/giveaway", "count": 0.1 },
      { "path": "/whitelist", "count": 0.3 }
    ]
  },
  "storage": {
    "ipfs": {
      "label": "IPFS",
      "cache": "/storage/ipfs.json",
      "token": "/.secret/ipfs-key.json"
    },
    "arweave": {
      "label": "Arweave",
      "cache": "/storage/arweave.json",
      "token": "/.secret/arweave-key.json"
    }
  }
}