{
  "engine": {
    "name": "GALO",
    "description": "Generative Artworks Lies On-chain",
    "version": 1.0
  },
  "traits": {
    "path": "/traits",
    "config": "traits.json",
    "rarity": "traits.csv",
    "delimiter": "__",
    "exts": [".png", ".jpg"]
  },
  "generation": {
    "config": "generation.json",
    "duplicateTolerance": 10000,
    "startAt": 0,
    "threads": []
  },
  "metadata": {
    "path": "/metadata",
    "config": "metadata.json",
    "template": {
      "name": "{{faker.name.findName().capitalize()}} #{{rarity.rank}}",
      "symbol": "GALO",
      "description": "Generative Artworks Lies On-chain",
      "seller_fee_basis_points": 500,
      "external_url": "https://example.com",
      "image": "{{artwork.url}}",
      "attributes": {
        "{{#each attributes}}": {
          "trait_type": "{{type.label}}",
          "value": "{{trait.label}}"
        }
      },
      "collection": {
        "name": "Galo on Solana",
        "family": "Galo"
      },
      "properties": {
        "files": [
          {
            "uri": "{{artwork.url}}",
            "type": "{{artwork.type}}"
          }
        ],
        "category": "image",
        "creators": [
          {
            "address": "wallet address for a creator",
            "share": 100
          }
        ]
      }
    }
  },
  "artworks": {
    "path": "/artworks",
    "ext": ".png",
    "background": "#fff",
    "transparent": false,
    "width": 1080,
    "height": 1080
  },
  "collage": {
    "name": "preview.jpg",
    "background": "#fff",
    "transparent": true,
    "order": "random",
    "limit": 0.5,
    "thumbPerRow": -1,
    "thumbWidth": 50
  },
  "storage": {
    "ipfs": {
      "label": "IPFS",
      "cache": "/storage/ipfs.json",
      "token": "/.secret/ipfs-key.json"
    },
    "arweave": {
      "label": "Arweave",
      "cache": "/storage/arweave.json",
      "token": "/.secret/arweave-key.json"
    },
    "gdrive": {
      "label": "Google Drive",
      "cache": "/storage/gdrive.json",
      "credentials": "/.secret/gdrive-credentials.json",
      "token": "/.secret/gdrive-token.json"
    }
  }
}