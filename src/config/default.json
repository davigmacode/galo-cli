{
  "engine": {
    "name": "GALO",
    "description": "Generative Artworks Lies Onchain",
    "version": 1.0
  },
  "storage": {
    "ipfs": {
      "label": "IPFS",
      "token": ""
    },
    "arweave": {
      "label": "Arweave",
      "token": ""
    },
    "gdrive": {
      "label": "Google Drive",
      "token": ""
    }
  },
  "collage": {
    "type": "image/png",
    "name": "preview.png",
    "perRow": 5,
    "width": 50
  },
  "traits": {
    "path": "/traits",
    "config": "traits.json",
    "width": 1080,
    "height": 1080
  },
  "metadata": {
    "path": "/metadata",
    "config": "metadata.json",
    "shuffle": 3,
    "template": {
      "dna": "{{dna}}",
      "edition": "{{edition}}",
      "name": "{{faker.hacker.adjective()}} {{faker.animal.type()}} #{{edition}}",
      "symbol": "GALO",
      "description": "Generative Artworks Lies Onchain",
      "seller_fee_basis_points": 500,
      "external_url": "https://example.com",
      "image": "{{edition}}.png",
      "attributes": {
        "{{#each attributes}}": {
          "trait_type": "{{trait}}",
          "value": "{{value}}"
        }
      },
      "collection": {
        "name": "Collection Name",
        "family": "Collection family Name"
      },
      "properties": {
        "files": [
          {
            "uri": "{{edition}}.png",
            "type": "image/png"
          }
        ],
        "category": "image",
        "maxSupply": 1,
        "creators": [
            {
              "address": "solana address for a creator",
              "share": 100
            }
        ]
      }
    }
  },
  "artworks": {
    "path": "/artworks",
    "type": "image/png",
    "quality": "best",
    "minify": true,
    "width": 1080,
    "height": 1080,
    "generations": [
      {
        "size": 15,
        "order": ["background", "body", "clothes", "hair"]
      },
      {
        "size": 10,
        "order": [
          "background",
          "body",
          "clothes",
          {
            "name": "hair",
            "excludes": ["Hair-01"]
          }
        ]
      }
    ]
  },
  "rarity": {
    "common": {
      "label": "Common",
      "weight": 0.9,
      "default": true
    },
    "uncommon": {
      "label": "Uncommon",
      "weight": 0.7
    },
    "rare": {
      "label": "Rare",
      "weight": 0.5
    },
    "epic": {
      "label": "Epic",
      "weight": 0.3
    },
    "legend": {
      "label": "Legend",
      "weight": 0.1
    }
  }
}