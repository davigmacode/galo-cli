{
  "engine": {
    "name": "GALO",
    "description": "Generative Artworks Lies Onchain",
    "version": 1.0
  },
  "storage": {
    "provider": "NFTStorage",
    "key": ""
  },
  "collage": {
    "type": "image/png",
    "name": "preview.png",
    "perRow": 5,
    "width": 50
  },
  "traits": {
    "path": "/traits",
    "config": "traits.json",
    "width": 1080,
    "height": 1080
  },
  "metadata": {
    "path": "/metadata",
    "config": "metadata.json",
    "shuffle": 3,
    "template": {
      "dna": "{{dna}}",
      "edition": "{{edition}}",
      "name": "{{faker.hacker.adjective()}} {{faker.animal.type()}} #{{edition}}",
      "symbol": "GALO",
      "description": "Generative Artworks Lies Onchain",
      "image": "{{edition}}.png",
      "attributes": {
        "{{#each attributes}}": {
          "trait_type": "{{trait_type}}",
          "value": "{{value}}"
        }
      }
    }
  },
  "artworks": {
    "path": "/artworks",
    "type": "image/png",
    "width": 1080,
    "height": 1080,
    "generations": [
      {
        "size": 10,
        "order": [
          {
            "name": "background",
            "traits": {
              "bg-01.png": { "weight": 0.4 },
              "bg-02.png": { "weight": 0.2 },
              "bg-03.png": { "weight": 0.7 }
            }
          },
          { "name": "body" },
          { "name": "hair" }
        ]
      },
      {
        "size": 5,
        "order": [
          { "name": "body" },
          { "name": "clothes" },
          { "name": "hair" }
        ]
      }
    ]
  },
  "rarity": {
    "c": { "name": "Common", "weight": 0.7 },
    "u": { "name": "Uncommon", "weight": 0.6 },
    "r": { "name": "Rare", "weight": 0.5 },
    "e": { "name": "Epic", "weight": 0.4 },
    "l": { "name": "Legend", "weight": 0.3 }
  }
}